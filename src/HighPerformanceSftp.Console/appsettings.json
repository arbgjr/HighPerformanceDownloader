{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/sftp-download-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },

  "SftpConfig": {
    "Host": "sftp.dominio.com.br",
    "Port": 22,
    "Username": "",
    "Password": "",
    "RemoteBasePath": "/caminho/arquivo.ext",
    "LocalBasePath": "C:\\tmp\\"
  },

  "DownloadConfig": {
    "ChunkSize": 4194304,
    "MaxParallelChunks": 8,
    "MaxBytesPerSecond": 0,
    "BufferSize": 2097152,
    "UseDirectMemory": true,
    "RetryCount": 3,
    "RetryDelayMs": 1000
  },

  "DiagnosticConfig": {
    "EnableRealTimeMonitoring": true,
    "MonitoringIntervalMs": 1000,
    "SaveDetailedReport": true,
    "PerformanceThresholds": {
      "CpuWarningPercent": 90,
      "MemoryWarningMb": 512,
      "DiskSpeedWarningMbps": 10,
      "NetworkLatencyWarningMs": 200,
      "NetworkBandwidthWarningMbps": 10
    }
  },

  "SecurityConfig": {
    "EnableSslVerification": true,
    "MinTlsVersion": "1.2",
    "AllowedCipherSuites": [
      "TLS_ECDHE_RSA_WITH_AES_256_GCM_SHA384",
      "TLS_ECDHE_RSA_WITH_AES_128_GCM_SHA256"
    ]
  }
}
